@model FireStation.Models.tbl_AccidentType

@{
    ViewBag.Title = "افزودن مورد جدید";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}


<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h4>افزودن نوع حادثه جدید</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <form class="form-control">
                    <div class="row justify-content-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col-lg-2">
                            @Html.LabelFor(model => model.AccidentTypeTitel, htmlAttributes: new { @class = "control-label h6" })
                                @Html.EditorFor(model => model.AccidentTypeTitel, new { htmlAttributes = new { @class = "form-control border-primary" } })
                                @Html.ValidationMessageFor(model => model.AccidentTypeTitel, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    <div class="row mt-5 justify-content-center">
                        <div class="col-2">
                            <input class="btn btn-success btn-block" type="submit" value="ثبت" />
                        </div>
                        <div class="col-2">
                            <a class="btn btn-outline-dark btn-block" href="~/AccidentType">بازگشت</a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
