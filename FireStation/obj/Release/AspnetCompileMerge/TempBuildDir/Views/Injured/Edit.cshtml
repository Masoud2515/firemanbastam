@model FireStation.Models.tbl_Injured

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}

<h2>ویرایش مصدوم</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="row">
            <div class="col-lg-12 p-4">
                <form class="form">
                    <div class="form-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <h6>شناسه مصدوم<span class="required text-danger">*</span></h6>
                                    @Html.EditorFor(model => model.InjuredID, new { htmlAttributes = new { @class = "form-control border-primary" } })
                                    @Html.ValidationMessageFor(model => model.InjuredID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <h6>نام<span class="required text-danger">*</span></h6>
                                    @Html.EditorFor(model => model.InjuredName, new { htmlAttributes = new { @class = "form-control border-primary" } })
                                    @Html.ValidationMessageFor(model => model.InjuredName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <h6>نام خانوادگی<span class="required text-danger">*</span></h6>
                                    @Html.EditorFor(model => model.InjuredLastName, new { htmlAttributes = new { @class = "form-control border-primary" } })
                                    @Html.ValidationMessageFor(model => model.InjuredLastName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <h6>جنسیت<span class="required text-danger">*</span></h6>
                                    <select class="form-control border-primary" name="InjuredSex" required>
                                        <option selected hidden>@Model.InjuredSex</option>
                                        <option value="true">مرد</option>
                                        <option value="false">زن</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.InjuredSex, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <h6>مأمور/غیرمأمور<span class="required text-danger">*</span></h6>
                                    <select class="form-control border-primary" name="InjuredType" required>
                                        <option selected hidden>@Model.InjuredType</option>
                                        <option value="true">مأمور</option>
                                        <option value="false">غیر مأمور</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.InjuredType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <h6>نوع مصدومیت<span class="required text-danger">*</span></h6>
                                    <select class="form-control border-primary" name="InjuredTypeinjury" required>
                                        <option selected hidden>@Model.InjuredTypeinjury</option>
                                        <option value="true">مجروح</option>
                                        <option value="false">متوفی</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.InjuredTypeinjury, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <h6>شرح مصدومیت<span class="required text-danger">*</span></h6>
                                    <textarea rows="2" class="form-control border-primary" name="InjuredDescription" required>@Model.InjuredDescription</textarea>
                                    @Html.ValidationMessageFor(model => model.InjuredDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <h6>محل اعزام</h6>
                                    @Html.EditorFor(model => model.InjuredLocation, new { htmlAttributes = new { @class = "form-control border-primary" } })
                                    @Html.ValidationMessageFor(model => model.InjuredLocation, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="row justify-content-center">
                            <input type="submit" value="افزودن" class="btn btn-success col-md-2" />
                            <button class="btn btn-outline-dark col-md-2 mr-2">@Html.ActionLink("بازگشت", "Index")</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
}