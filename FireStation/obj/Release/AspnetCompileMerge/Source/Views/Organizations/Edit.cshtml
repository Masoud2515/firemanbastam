@model FireStation.Models.tbl_Organizations

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}
<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h4>ویرایش سازمان</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <form class="form-control">
                    <div class="row justify-content-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.OrId)

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.OrTitel, htmlAttributes: new { @class = "control-label h6" })<span class="required text-danger">*</span>
                            @Html.EditorFor(model => model.OrTitel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OrTitel, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.OrTel, htmlAttributes: new { @class = "control-label h6" })<span class="required text-danger">*</span>
                            @Html.EditorFor(model => model.OrTel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OrTel, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.OrAdress, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.OrAdress, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OrAdress, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="row mt-5 justify-content-center">
                        <div class="col-2">
                            <input class="btn btn-success btn-block" type="submit" value="ثبت" />
                        </div>
                        <div class="col-2">
                            <a class="btn btn-outline-dark btn-block" href="~/Organizations">بازگشت</a>
                        </div>
                    </div>
                </form>
            }

        </div>
    </div>
</div>
