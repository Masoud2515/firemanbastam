@model FireStation.Models.tbl_Repair

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}

<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h4>ویرایش تعمیرات</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <form class="form-control">
                    <div class="row justify-content-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.RepairId)
                        @Html.HiddenFor(model => model.MaterialId)
                        <div class="col-lg-2">
                            @Html.LabelFor(model => model.RepairTitel, htmlAttributes: new { @class = "control-label h6" })<span class="required text-danger">*</span>
                            @Html.EditorFor(model => model.RepairTitel, new { htmlAttributes = new { @class = "form-control border-primary" } })
                            @Html.ValidationMessageFor(model => model.RepairTitel, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-1">
                            @Html.LabelFor(model => model.MaterialId, "MaterialId", htmlAttributes: new { @class = "control-label h6" })
                            <p class = "form-control border-primary"> @Model.tbl_Material.MaterialName</p>
                            @Html.ValidationMessageFor(model => model.MaterialId, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-6">
                            @Html.LabelFor(model => model.RepairDescription, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.RepairDescription, new { htmlAttributes = new { @class = "form-control border-primary" } })
                            @Html.ValidationMessageFor(model => model.RepairDescription, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-2">
                            <label class="h6">ایستگاه ها: </label><span class="required text-danger">*</span>
                            <select class="form-control border-primary" name="StateId">
                                <option value="@Model.StateId" selected hidden>@Model.tbl_State.StateName</option>
                                @foreach (var item in ViewBag.StationName)
                                {
                                    <option value="@item.StateId">@item.StateName</option>
                                }


                            </select>
                        </div>
                    </div>
                    <div class="row mt-5 justify-content-center">
                        <div class="col-2">
                            <input class="btn btn-success btn-block" type="submit" value="ثبت" />
                        </div>
                        <div class="col-2">
                            <a class="btn btn-outline-dark btn-block" href="~/Repair">بازگشت</a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>