@model IEnumerable<FireStation.Models.tbl_Material>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}


<section id="html">
    <div class="row">
        @*<p class="offset-8">* جهت ویرایش حوادث به جزئیات بروید.</p>*@
        <div class="col-12">
            <div class="card">
                <div class="card-body collpase show">
                    <div class="card-block card-dashboard table-responsive">
                        <h5>فهرست تجهیزات</h5>
                        <hr />
                        <div class="btn-group offset-1">
                            <button class="btn btn-outline-success">@Html.ActionLink("افزودن", "Create")</button>
                        </div>
                        <table class="table table-striped table-bordered sourced-data text-center">
                            <thead class="bg-dark text-light">

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaterialCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaterialName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaterialVahed)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaterialType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaterialPic)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaterialCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaterialName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaterialVahed)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaterialType)
                                        </td>
                                        <td>
                                            <img src="~/@item.MaterialPic" width="120" />
                                        </td>
                                        <td>
                                            <button class="btn btn-outline-info">@Html.ActionLink("ویرایش", "Edit", new { id = item.MaterialId })</button>
                                            @*<button class="btn btn-outline-warning">@Html.ActionLink("جزئیات", "Details", new { id = item.MaterialId })</button>*@
                                            <button class="btn btn-outline-danger">@Html.ActionLink("حذف", "Delete", new { id = item.MaterialId })</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>