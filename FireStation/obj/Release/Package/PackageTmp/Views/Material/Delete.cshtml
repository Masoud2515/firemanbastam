@model FireStation.Models.tbl_Material

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}
<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h3>آیا مطمئن هستید که میخواهید این مورد را حذف کنید؟</h3>
            <h4>حذف تجهیزات</h4>
            <hr />
            <table class="table table-borderless">
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.MaterialCode)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.MaterialCode)
                    </td>

                    <td>
                        @Html.DisplayNameFor(model => model.MaterialName)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.MaterialName)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.MaterialVahed)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.MaterialVahed)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.MaterialState)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.tbl_State.StateName)
                    </td>
                </tr>
            </table>
            <div class="col-lg-2">
                <label class="control-label">
                    @Html.DisplayNameFor(model => model.MaterialPic)
                </label>
                <img src="~/@Model.MaterialPic" width="300" />
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row mt-5 justify-content-center">
                    <div class="col-2">
                        <input class="btn btn-danger btn-block" type="submit" value="حذف" />
                    </div>
                    <div class="col-2">
                        <a class="btn btn-outline-dark btn-block" href="~/Material">بازگشت</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>