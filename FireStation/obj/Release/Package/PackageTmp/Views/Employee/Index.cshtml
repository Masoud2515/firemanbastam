@model IEnumerable<FireStation.Models.tbl_Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}

<section id="html">
    <div class="row">
        @*<p class="offset-8">* جهت ویرایش حوادث به جزئیات بروید.</p>*@
        <div class="col-12">
            <div class="card">
                <div class="card-body collpase show">
                    <div class="card-block card-dashboard table-responsive">
                        <h5>کارمندان</h5>
                        <hr />
                        <div class="btn-group offset-1">
                            <button class="btn btn-outline-success">@Html.ActionLink("افزودن", "Create")</button>
                        </div>
                        <table class="table table-striped table-bordered sourced-data text-center">
                            <thead class="bg-dark text-light">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeLastName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeePhone)
                                    </th>
                                    <th style="width:200px;">
                                        @Html.DisplayNameFor(model => model.EmployeeAdress)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeePicUrl)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeFName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeMCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeBirthdate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeSex)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeWork)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeDateRegistered)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tbl_State.StateName)
                                    </th>
                                    <th style="min-width:200px">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeLastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeePhone)
                                        </td>
                                        <td>
                                            <div><pre style="overflow-x:scroll;"> @Html.DisplayFor(modelItem => item.EmployeeAdress)</pre></div>
                                        </td>
                                        <td>
                                            <img src="~/@item.EmployeePicUrl" width="80" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeFName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeMCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeBirthdate)
                                        </td>
                                        <td>
                                            @if (item.EmployeeSex == true)
                                            {
                                                <p>مرد</p>
                                            }
                                            else
                                            {
                                                <p>زن</p>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeWork)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeDateRegistered)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tbl_State.StateName)
                                        </td>
                                        <td>
                                            <button class="btn btn-outline-info">@Html.ActionLink("ویرایش", "Edit", new { id = item.EmployeeId })</button>
                                            <button class="btn btn-outline-warning">@Html.ActionLink("جزئیات", "Details", new { id = item.EmployeeId })</button>
                                            <button class="btn btn-outline-danger">@Html.ActionLink("حذف", "Delete", new { id = item.EmployeeId })</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>