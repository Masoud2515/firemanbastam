            <h4>حذف کاربر</h4>
            <hr />
            <table class="table table-borderless">
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.UserUserName)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.UserUserName)
                    </td>

                    <td>
                        @Html.DisplayNameFor(model => model.UserPassword)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.UserPassword)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.UserRole)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.UserRole)
                    </td>

                    <td>
                        @Html.DisplayNameFor(model => model.tbl_Employee.EmployeeCode)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.tbl_Employee.EmployeeCode)
