@model FireStation.Models.tbl_Usage

@{
    ViewBag.Title = "ویرایش";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}
<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h4>ویرایش نوع کاربری</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <form class="form-control">
                    <div class="row justify-content-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.UsageId)

                        <div class="col-lg-2">
                        @Html.LabelFor(model => model.UsageTitel, htmlAttributes: new { @class = "control-label h6" })<span class="required text-danger">*</span>
                            @Html.EditorFor(model => model.UsageTitel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UsageTitel, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-lg-2">
                        @Html.LabelFor(model => model.UsageDescription, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.UsageDescription, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UsageDescription, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="row mt-5 justify-content-center">
                        <div class="col-2">
                            <input class="btn btn-success btn-block" type="submit" value="ثبت" />
                        </div>
                        <div class="col-2">
                            <a class="btn btn-outline-dark btn-block" href="~/Usage">بازگشت</a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>