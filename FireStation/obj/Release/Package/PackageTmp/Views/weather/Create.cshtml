@model FireStation.Models.tbl_weather

@{
    ViewBag.Title = "افزدون مورد جدید";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}
<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h4>افزودن نوع آب و هوای جدید</h4>

            @using (Html.BeginForm())
            {
                <form class="form-control">
                    <div class="row justify-content-center">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-lg-2">
                            @Html.LabelFor(model => model.WeatherTitel, htmlAttributes: new { @class = "control-label h6" }) <span class="required text-danger">*</span>
                            @Html.EditorFor(model => model.WeatherTitel, new { htmlAttributes = new { @class = "form-control" , required = "required" , @oninvalid="this.setCustomValidity('لطفا این فیلد را پر نمایید.')"} })
                            @Html.ValidationMessageFor(model => model.WeatherTitel, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-4">
                            @Html.LabelFor(model => model.WeatherDec, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.WeatherDec, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.WeatherDec, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mt-5 justify-content-center">
                        <div class="col-2">
                            <input class="btn btn-success btn-block" type="submit" value="ثبت" />
                        </div>
                        <div class="col-2">
                            <a class="btn btn-outline-dark btn-block" href="~/weather">بازگشت</a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
