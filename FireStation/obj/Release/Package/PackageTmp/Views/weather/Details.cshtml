@model FireStation.Models.tbl_weather

@{
    ViewBag.Title = "جزئیات نوع داده";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}
<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h3>جزئیات</h3>
            <h4>جزئیات شرایط جوی</h4>
            <hr />
            <table class="table table-borderless">
                <tr>
                    <td>عنوان</td>
                    <td>
                        @Html.DisplayFor(model => model.WeatherTitel)
                    </td>
                </tr>
                <tr>
                    <td>توضیحات</td>
                    <td>
                        @Html.DisplayFor(model => model.WeatherDec)
                    </td>
                </tr>
            </table>
            <div class="row mt-5 justify-content-center">
                <div class="col-2">
                    <button class="btn btn-outline-info btn-block">@Html.ActionLink("ویرایش", "Edit", new { id = Model.WeatherId })</button>
                </div>
                <div class="col-2">
                    <a class="btn btn-outline-dark btn-block" href="~/weather">بازگشت</a>
                </div>
            </div>
        </div>
    </div>
</div>