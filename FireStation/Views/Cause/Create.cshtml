@model FireStation.Models.tbl_Cause

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="row">
            <div class="col-lg-12 p-4">
                <h4>افزودن علت حادثه</h4>
                <hr />
                <form class="form-control">
                    <div class="row justify-content-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col-md-10">
                            @Html.LabelFor(model => model.CauseTitel, htmlAttributes: new { @class = "control-label h6" })<span class="required text-danger">*</span>
                                @Html.EditorFor(model => model.CauseTitel, new { htmlAttributes = new { @class = "form-control border-primary" } })
                                @Html.ValidationMessageFor(model => model.CauseTitel, "", new { @class = "text-danger" })
                            </div>

                    </div>
                    <div class="row mt-5 justify-content-center">
                        <div class="col-2">
                            <input class="btn btn-success btn-block" type="submit" value="ثبت" />
                        </div>
                        <div class="col-2">
                            <a class="btn btn-outline-dark btn-block" href="~/Cause">بازگشت</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}