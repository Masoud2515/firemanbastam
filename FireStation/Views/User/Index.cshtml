@model IEnumerable<FireStation.Models.tbl_User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}

<section id="html">
    <div class="row">
        @*<p class="offset-8">* جهت ویرایش حوادث به جزئیات بروید.</p>*@
        <div class="col-12">
            <div class="card">
                <div class="card-body collpase show">
                    <div class="card-block card-dashboard table-responsive">
                        <h5>فهرست کاربران</h5>
                        <hr />
                        <div class="btn-group offset-1">
                            <button class="btn btn-outline-success">@Html.ActionLink("افزودن", "Create")</button>
                        </div>
                        <table class="table table-striped table-bordered text-center">
                            <thead class="bg-dark text-light">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserUserName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserPassword)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserRole)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tbl_Employee.EmployeeCode)
                                    </th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserUserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserPassword)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserRole)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tbl_Employee.EmployeeCode)
                                        </td>
                                        <td>
                                            <button class="btn btn-outline-info"> @Html.ActionLink("ویرایش", "Edit", new { id = item.UserId }) </button>
                                            @*<button class="btn btn-outline-warning"> @Html.ActionLink("جزئیات", "Details", new { id = item.UserId }) </button>*@
                                            <button class="btn btn-outline-danger"> @Html.ActionLink("حذف", "Delete", new { id = item.UserId }) </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
