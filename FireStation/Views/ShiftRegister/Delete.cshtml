@model FireStation.Models.tbl_ShiftRegister

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}

<div class="card">
    <div class="col-lg-12 p-4">
        <h4>جزئیات گزارش شیفت</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-lg-12 mb-3">
                <lable class="label-control h6">
                    @Html.DisplayNameFor(model => model.ShiftRegisterDec)
                </lable>

                <textarea rows="5" class="form-control">
                    @Html.DisplayFor(model => model.ShiftRegisterDec)
                </textarea>
            </div>
            <div class="col-lg-4">
                <lable class="label-control h6">
                    @Html.DisplayNameFor(model => model.ShiftRegisterCommandor)
                </lable>

                <p class="form-control">
                    @Html.DisplayFor(model => model.ShiftRegisterCommandor)
                </p>

                <lable class="label-control h6">
                    @Html.DisplayNameFor(model => model.ShiftRegisterTimeStart)
                </lable>

                <p class="form-control">
                    @Html.DisplayFor(model => model.ShiftRegisterTimeStart)
                </p>
            </div>
            <div class="col-lg-4">

                <lable class="label-control h6">
                    @Html.DisplayNameFor(model => model.ShiftRegisterTimeEnd)
                </lable>

                <p class="form-control">
                    @Html.DisplayFor(model => model.ShiftRegisterTimeEnd)
                </p>
                <lable class="label-control h6">
                    @Html.DisplayNameFor(model => model.ShiftRegisterDateStart)
                </lable>

                <p class="form-control">
                    @Html.DisplayFor(model => model.ShiftRegisterDateStart)
                </p>
            </div>
            <div class="col-lg-4">

                <lable class="label-control h6">
                    @Html.DisplayNameFor(model => model.ShiftRegisteridDateEnd)
                </lable>

                <p class="form-control">
                    @Html.DisplayFor(model => model.ShiftRegisteridDateEnd)
                </p>

                <lable class="label-control h6">
                    @Html.DisplayNameFor(model => model.ShiftRegisterurl)
                </lable>

                <p class="form-control">
                    @Html.DisplayFor(model => model.ShiftRegisterurl)
                </p>
                <lable class="label-control h6">
                    @Html.DisplayNameFor(model => model.tbl_shift.ShiftName)
                </lable>

                <p class="form-control">
                    @Html.DisplayFor(model => model.tbl_shift.ShiftName)
                </p>
            </div>

        </div>
    </div>
    @using (Html.BeginForm())
    {
        <div class="row justify-content-center">
            @Html.AntiForgeryToken()
            <div class="col-lg-2">
                <input type="submit" value="حذف" class="btn btn-outline-danger btn-block" />
            </div>
            <div class="col-lg-2">
                <a class="btn btn-outline-dark btn-block" href="~/ShiftRegister">بازگشت</a>
            </div>

        </div>
    }
</div>


