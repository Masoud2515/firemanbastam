@model FireStation.Models.tbl_weather

@{
    ViewBag.Title = "حذف کردن نوع آب و هوا";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}
<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h3>آیا مطمئن هستید که میخواهید این مورد را حذف کنید؟</h3>
            <h4>حذف شرایط جوی</h4>
            <hr />
            <table class="table table-borderless">
                <tr>
                    <td>عنوان</td>
                    <td>
                        @Html.DisplayFor(model => model.WeatherTitel)
                    </td>
                </tr>
                <tr>
                    <td>توضیحات</td>
                    <td>
                        @Html.DisplayFor(model => model.WeatherDec)
                    </td>
                </tr>
            </table>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row mt-5 justify-content-center">
                    <div class="col-2">
                        <input class="btn btn-danger btn-block" type="submit" value="حذف" />
                    </div>
                    <div class="col-2">
                        <a class="btn btn-outline-dark btn-block" href="~/weather">بازگشت</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>