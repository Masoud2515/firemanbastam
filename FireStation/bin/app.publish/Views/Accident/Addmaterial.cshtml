@model FireStation.Models.tbl_AccidentM

@{
    ViewBag.Title = "Addmaterial";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <h4>افزودن تجهیزات حادثه</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" class="form-control border-primary" value="@ViewBag.Ac" name="Acid" required>
            <form class="form-control">
                @for (int i = 1; i <= ViewBag.number; i++)
                {
                    <div class="card">
                        <h4 class="form-section">
                            <i class="fa fa-hospital-o"></i>تجهیزات شماره @i
                        </h4>
                        <div class="row justify-content-center pr-5 pl-5 mt-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label h6" for="AccidentReportReciver">انتخاب تجهیزات</label><span class="required text-danger">*</span>
                                    <select class="form-control border-primary selectpicker" data-live-search="true" name="MaterialId" required>
                                        @foreach (var item in ViewBag.material)
                                        {
                                            <option value="@item.MaterialId">@item.MaterialCode (@item.MaterialName) </option>
                                        }
                                    </select>
                                    @Html.ValidationMessageFor(model => model.MaterialId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label h6">تعداد تجهیزات</label><span class="required text-danger">*</span>
                                    <input type="number" value="0" class="form-control border-primary" name="tedad" min="0" required>
                                </div>
                                @Html.ValidationMessageFor(model => model.tedad, "", new { @class = "text-danger" })
                            </div>

                        </div>
                    </div>
                }

                <div class="row justify-content-center">
                    <div class="col-lg-2">
                        <input type="submit" value="ثبت حادثه" class="btn btn-block btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
}
