@model FireStation.Models.tbl_weather

@{
    ViewBag.Title = "ویرایش";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}
<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h4>ویرایش نوع آب و هوا</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <form class="form-control">
                    <div class="row justify-content-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.WeatherId)
                     
                            <div class="col-lg-2">
                            <label class="control-label h6">عنوان</label>
                                @Html.EditorFor(model => model.WeatherTitel, new { htmlAttributes = new { @class = "form-control" } , required = "required"})<span class="required text-danger">*</span>
                                @Html.ValidationMessageFor(model => model.WeatherTitel, "", new { @class = "text-danger" })
                            </div>
                     
                            <div class="col-lg-4">
                            <label class="control-label h6">توضیحات </label>
                                @Html.EditorFor(model => model.WeatherDec, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.WeatherDec, "", new { @class = "text-danger" })
                            </div>
                       
                    </div>
                    <div class="row mt-5 justify-content-center">
                        <div class="col-2">
                            <input class="btn btn-success btn-block" type="submit" value="ثبت" />
                        </div>
                        <div class="col-2">
                            <a class="btn btn-outline-dark btn-block" href="~/weather">بازگشت</a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
