@model FireStation.Models.tbl_Missives

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}
<div class="card">
    <div class="row">
        <div class="col-lg-12 p-4">
            <h4>جزئیات بخشنامه</h4>
            <hr />
            <table class="table table-borderless">
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.MissiveTitel)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.MissiveTitel)
                    </td>

                    <td>
                        @Html.DisplayNameFor(model => model.MissiveNumber)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.MissiveNumber)
                    </td>

                    <td>
                        @Html.DisplayNameFor(model => model.MissiveDate)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.MissiveDate)
                    </td>

                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.MissiveText)
                    </td>

                    <td colspan="5">
                        @Html.DisplayFor(model => model.MissiveText)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.MissiveFileUrl)
                    </td>

                    <td>
                        <img src="~/@Model.MissiveFileUrl" style="width:300px" alt="" />
                    </td>

                    <td>
                        @Html.DisplayNameFor(model => model.tbl_User.UserUserName)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.tbl_User.UserUserName)
                    </td>

                </tr>
            </table>
            <div class="row mt-5 justify-content-center">
                <div class="col-2">
                    <button class="btn btn-outline-info btn-block">@Html.ActionLink("ویرایش", "Edit", new { id = Model.MissiveId })</button>
                </div>
                <div class="col-2">
                    <a class="btn btn-outline-dark btn-block" href="~/Missives">بازگشت</a>
                </div>
            </div>
        </div>
    </div>
</div>