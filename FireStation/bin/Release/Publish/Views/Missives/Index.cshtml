@model IEnumerable<FireStation.Models.tbl_Missives>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPannel.cshtml";
}
<section id="html">
    <div class="row">
        @*<p class="offset-8">* جهت ویرایش حوادث به جزئیات بروید.</p>*@
        <div class="col-12">
            <div class="card">
                <div class="card-body collpase show">
                    <div class="card-block card-dashboard table-responsive">
                        <h5>بخشنامه ها</h5>
                        <hr />
                        <div class="btn-group offset-1">
                            <button class="btn btn-outline-success">@Html.ActionLink("افزودن", "Create")</button>
                        </div>
                        <table class="table table-striped table-bordered sourced-data text-center" cellspacing="0" style="width:100%; table-layout:fixed">
                            <thead class="bg-dark text-light">
                                <tr>
                                    <th>
                                        <a>عنوان بخشنامه</a>
                                    </th>
                                    @*<th>
                                            <a>متن بخشنامه</a>
                                        </th>*@
                                    <th style="width:200px;">
                                        <a>فایل</a>
                                    </th>
                                    <th>
                                        <a>تاریخ ثبت</a>
                                    </th>
                                    <th>
                                        <a>شماره بخشنامه</a>
                                    </th>
                                    <th>
                                        <a>کاربر ثبت کننده</a>
                                    </th>
                                    <th style="width:200px">
                                        <a>عملیات</a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MissiveTitel)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.MissiveText)
                                            </td>*@
                                    <td>
                                        <button class="btn btn-outline-success"b>
                                            @Html.ActionLink("دریافت", "DownloadExampleFiles", "Missives", new { fileName = item.MissiveFileUrl }, new { @target = "_blank" })
                                        </button>
                                    </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MissiveDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MissiveNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tbl_User.UserUserName)
                                        </td>
                                        <td>
                                            <button class="btn btn-outline-info">@Html.ActionLink("ویرایش", "Edit", new { id = item.MissiveId })</button>
                                            <button class="btn btn-outline-warning">@Html.ActionLink("جزئیات", "Details", new { id = item.MissiveId })</button>
                                            <button class="btn btn-outline-danger">@Html.ActionLink("حذف", "Delete", new { id = item.MissiveId })</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
